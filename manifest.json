{
  "manifest_version": 3,
  "name": "GIF Viewer",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "contextMenus.refresh"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 